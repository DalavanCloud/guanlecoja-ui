.gl-page-with-sidebar(ng-class="{'active': page.sidebarActive}")
    .sidebar.sidebar-blue(ng-mouseenter='page.enterSidebar()',ng-mouseleave='page.leaveSidebar()')
        ul
            li.sidebar-main
                a(href='#', ng-click='page.sidebarActive=!page.sidebarActive')
                    | {{appTitle}}
                    span.menu-icon.fa.fa-bars
            li.sidebar-title
                span NAVIGATION
            div(ng-repeat="group in groups")
                div(ng-if="group.items.length > 0")
                    li.sidebar-list
                        a(ng-click='page.toggleGroup(group)')
                            i.fa.fa-angle-right
                            | &nbsp;{{group.caption}}
                            span.menu-icon.fa(ng-class="'fa-' + group.icon")
                    li.sidebar-list.subitem(ng-class="{'active': page.activeGroup==group}", ng-repeat="item in group.items")
                        a(ui-sref='{{item.sref}}')
                            | {{item.caption}}
                div(ng-if="group.items.length == 0")
                    li.sidebar-list
                        a(ui-sref='{{group.sref}}', ng-click='page.toggleGroup(group)')
                            | {{group.caption}}
                            span.menu-icon.fa(ng-class="'fa-' + group.icon")
        .sidebar-footer
            .col-xs-4(ng-repeat="item in footer")
                a(ng-href='{{item.href}}')
                    | {{item.caption}}
    .content
        div(ng-transclude)
